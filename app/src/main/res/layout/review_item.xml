<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_author_title"
        android:layout_marginStart="@dimen/medium_vertical_spacing"
        android:layout_marginTop="@dimen/medium_vertical_spacing"
        android:id="@+id/tv_author"
        android:textSize="@dimen/h1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_content_title"
        android:layout_marginStart="@dimen/medium_vertical_spacing"
        android:layout_marginTop="@dimen/medium_vertical_spacing"
        android:id="@+id/tv_content"
        android:textSize="@dimen/h2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_vertical_spacing"
        android:background="@color/colorPrimary" />

</LinearLayout>